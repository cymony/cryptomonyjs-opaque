{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "pretty": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["src/ts/**/*", "src/api/**/*"],
  "exclude": ["dist", "node_modules"]
}
